{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"],
			"@/*": ["./packages/*"]
		},
		"plugins": [
			{
				"name": "typescript-plugin-add-import-extension",
				"options": {
					"extension": ".js"
				}
			}
		]
	},
	"include": ["packages/**/*"]
}
